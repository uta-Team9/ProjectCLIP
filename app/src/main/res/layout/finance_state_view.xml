<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team9.clip_loginhomecareer.FinanceStateView"
    android:background="#ffffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_cash"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openCashView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assets"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_asset"
        android:layout_below="@+id/txt_cash"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liabilities"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_liability"
        android:layout_below="@+id/txt_asset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Cards"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_credit"
        android:layout_below="@+id/txt_liability"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_other"
        android:layout_below="@+id/txt_credit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
