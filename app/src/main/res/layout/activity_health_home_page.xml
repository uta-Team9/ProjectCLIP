<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/health"
    android:background="#ffe0e0e0">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Information"
        android:id="@+id/textView"
        android:layout_weight="0.04"
        android:textSize="35dp"
        android:shadowColor="#ff000000"
        android:textColor="#ff020202"
        android:paddingLeft="20dp"
        android:gravity="bottom" />

    <Button
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_doctors_visits"
        android:layout_row="20"
        android:layout_column="0"
        android:layout_toRightOf="@+id/WeightLossAndHealthPlan"
        android:onClick="sendMessage"
        android:gravity="fill_vertical"
        android:focusableInTouchMode="false"
        android:paddingLeft="30dp"
        android:layout_weight="0.07"
        android:background="#ffe0e0e0"
        android:clickable="true"/>

    <Button
        android:id="@+id/WeightLossAndHealthPlan"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_weight_loss_health_plan"
        android:layout_row="21"
        android:layout_column="0"
        android:layout_gravity="left|center_horizontal"
        android:layout_weight="0.09"
        android:gravity="center_vertical|fill_vertical"
        android:paddingLeft="30dp"
        android:background="#ffe0e0e0"
        android:onClick="sendMessageWeightLossAndDietPlan"/>

    <Button
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_medicalReport"
        android:layout_row="24"
        android:layout_column="0"
        android:layout_gravity="left|center_horizontal"
        android:layout_weight="0.07"
        android:gravity="center_vertical|fill_vertical"
        android:paddingLeft="30dp"
        android:background="#ffe0e0e0"
        android:onClick="sendMessageMedReport"/>


</LinearLayout>