<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ffffffff"
    tools:context="team9.clip_loginhomecareer.ViewAppointment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"
        android:layout_margin="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Exercise Name"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="name"
                android:textColor="#ffbb1318"
                android:layout_marginLeft="64dp"
                android:id="@+id/view_doctorName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Calories Burned"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="calories"
                android:textColor="#ffbb1318"
                android:layout_marginLeft="64dp"
                android:id="@+id/view_apptdate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Duration of Workout"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="duration "
                android:textColor="#ffbb1318"
                android:layout_marginLeft="64dp"
                android:id="@+id/view_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Muscle Group Target"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="muscle group"
                android:textColor="#ffbb1318"
                android:layout_marginLeft="64dp"
                android:id="@+id/view_reason"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:id="@+id/edit_button"
            android:textColor="#FFFFFFFF"
            android:background="#ffbb1318"
            android:onClick="editInstance"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:id="@+id/delete_button"
            android:textColor="#FFFFFFFF"
            android:background="#ffbb1318"
            android:onClick="deleteInstance"/>
    </LinearLayout>

</RelativeLayout>
