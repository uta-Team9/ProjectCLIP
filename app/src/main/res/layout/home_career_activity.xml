<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                tools:context="team9.clip_loginhomecareer.CareerHome"
                android:background="#ffffffff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Job Searches"
        android:id="@+id/view_jobs_button"
        android:padding="16dp"
        android:clickable="true"
        android:onClick="moveViews"
        android:textSize="18dp"
        android:textColor="#ff1904c0"
        android:layout_below="@+id/view_career_companies_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Contacts"
        android:id="@+id/view_contacts_button"
        android:padding="16dp"
        android:clickable="true"
        android:onClick="moveViews"
        android:textSize="18dp"
        android:textColor="#ff1904c0"
        android:layout_below="@+id/view_goals_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Goals"
        android:id="@+id/view_goals_button"
        android:padding="16dp"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:onClick="moveViews"
        android:textSize="18dp"
        android:textColor="#ff1904c0"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Online Identities"
        android:id="@+id/view_online_identities_button"
        android:padding="16dp"
        android:clickable="true"
        android:onClick="moveViews"
        android:textSize="18dp"
        android:textColor="#ff1904c0"
        android:layout_below="@+id/view_jobs_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Companies"
        android:id="@+id/view_career_companies_button"
        android:padding="16dp"
        android:clickable="true"
        android:onClick="moveViews"
        android:textSize="18dp"
        android:textColor="#ff1904c0"
        android:layout_below="@+id/view_contacts_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
