<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team9.clip_loginhomecareer.FinanceHome"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial State"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_financial_state"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stocks and Securities"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_stock_security"
        android:layout_below="@+id/txt_financial_state"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial Goals"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_financial_goals"
        android:layout_below="@+id/txt_stock_security"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial Status Summary"
        android:padding="16dp"
        android:textSize="24dp"
        android:background="#FFFFFFFF"
        android:id="@+id/txt_financial_summary"
        android:layout_below="@+id/txt_financial_goals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
